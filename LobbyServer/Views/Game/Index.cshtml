@{
    ViewBag.Title = "Index";
}



<div id="Game" style="display: none;">

    <!-- ErrorModal -->
    <div class="modal fade" id="ErrorModal" tabindex="-1" role="dialog" aria-labelledby="ErrorModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 data-bind="text: lastError().title" class="modal-title" id="ErrorModalLabel"></h4>
                </div>
                <div class="modal-body">
                    <p data-bind="text: lastError().body"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <!-- RoomModal -->
    <div class="modal fade" id="RoomModal" tabindex="-1" role="dialog" aria-labelledby="RoomModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 data-bind="" class="modal-title" id="RoomModalLabel">RoomModal</h4>
                </div>
                <div class="modal-body">
                    <p data-bind="text: roomIdGoingToJoin"></p>
                    <input type="text" data-bind="value: roomPasswordGoingToJoin" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: JoinRoom">Join</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- ReportModal -->
    <div class="modal fade" id="ReportModal" tabindex="-1" role="dialog" aria-labelledby="ReportModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 data-bind="" class="modal-title" id="ReportModalLabel">ReportModal</h4>
                </div>
                <div class="modal-body">
                    <input type="text" data-bind="value: roomReportNote" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: roomReport">Join</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Disconnected Scene -->
    <div data-bind="visible: state() == State.Disconnected">
        <h3>Disconnected</h3>
        <button type="button" data-bind="click: Connect">Connect</button>
    </div>

    <!-- Characters Scene -->
    <div data-bind="visible: state() == State.Characters">
        <h3 data-bind="text: Text('CharactersList')"></h3>
        <button type="button" data-bind="click: function(){state(State.CreateCharacter)}" class="btn btn-default">Create</button>
        <table class="table">
            <thead>
                <tr>
                    <th>キャラクター名</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: characters">
                <tr>
                    <td data-bind="text: name"></td>
                    <td><button type="button"
                                data-bind="text: $root.Text('Select'), click: function(){ $root.Send('/SelectCharacter ' + name); }"
                                class="btn btn-primary btn-xs"></button></td>
                </tr>
            </tbody>
        </table>
        <div class="alert alert-warning">ユーザー情報保護のためキャラクターの削除はできません。</div>
    </div>

    <!-- Character Creation Scene -->
    <div data-bind="visible: state() == State.CreateCharacter">
        <h3>Create Character</h3>
        <ul data-bind="foreach: validationErrors.CharacterCreation">
            <li data-bind="text: $data"></li>
        </ul>
        <div data-bind="with: createCharacterData">
            <input type="text" data-bind="value: name"/>
        </div>
        <button type="button" data-bind="click: CreateCharacter">Create</button>
    </div>

    <!-- Rooms(Lobby) Scene -->
    <div data-bind="visible: state() == State.Rooms">
        <div class="row">
            <div class="col-sm-6">
                <h3 data-bind="text: $root.Text('VillagesList')">Rooms</h3>
                <button type="button" data-bind="text: $root.Text('Create'), click: CreateRoom" class="btn btn-default"></button>
                <button type="button" data-bind="click: GetRooms" class="btn btn-default">更新</button>
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>村の名前</th>
                            <th>人数</th>
                            <th>1日の長さ</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: rooms">
                        <tr>
                            <td data-bind="text: roomId"></td>
                            <td data-bind="text: name"></td>
                            <td data-bind="text: max"></td>
                            <td data-bind="text: interval"></td>
                            <td>
                                <span data-bind="text: requiresPassword"></span>
                                <button type="button"
                                        data-bind="text: $root.Text('Join'), click: function(){ $root.OpenRoomModal(roomId); }"
                                        class="btn btn-primary btn-xs"></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-sm-6">
                <h3>雑談・募集用チャット</h3>
                <div class="input-group">
                    <input type="text" id="LobbyChat" class="form-control" placeholder="ここからメッセージを送信できます"/>
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="button">送信</button>
                    </span>
                </div>
                <ul data-bind="foreach: lobbyMessages" class="messages">
                    <li data-bind="attr: { class: fmClass }">
                        <div class="from">
                            <span data-bind="text: name" class="name"></span>
                            <span data-bind="text: fmCreated" class="time"></span>
                        </div>
                        <div data-bind="text: body" class="body"></div>
                    </li>
                </ul>
            </div>
        </div>
    </div>



    <div data-bind="visible: state() == State.Playing">
        <h3>Playing</h3>
        <button type="button" data-bind="text: $root.Text('QuitRoom'), click: QuitRoom"></button>

        <!-- Configuring -->
        <div data-bind="visible: roomState() == RoomState.Configuring">
            <h4>Configuring</h4>
            <ul data-bind="foreach: validationErrors.RoomConfiguration">
                <li data-bind="text: $data"></li>
            </ul>
            <div data-bind="with: roomConfiguration">
                <input type="text" data-bind="value: name" />
                <input type="text" data-bind="value: password" />
                <input type="number" data-bind="value: max" />
                <input type="number" data-bind="value: interval" />
            </div>
            <button type="button" data-bind="text: $root.Text('Configure'), click: RoomConfigure"></button>
        </div>

        <div data-bind="visible: roomState() != RoomState.Configuring">
            <!-- Actors Pane -->
            <ul data-bind="foreach: actors" class="actors clearfix">
                <li data-bind="visible: !isDead">
                    <div class="name" data-bind="text: fmTitleAndName, attr: {style: stName}"></div>
                    <div>
                        <table>
                            <tr>
                                <td data-bind="text: fmGender"></td>
                                <td data-bind="text: fmRole"></td>
                                <td><div data-bind="attr: {style: cpStyle}" class="icon"></div></td>
                            </tr>
                        </table>
                        <div class="user" data-bind="text: fmUser, attr: {style: stUser}"></div>
                    </div>
                </li>
            </ul>
            <ul data-bind="foreach: actors" class="actors clearfix">
                <li data-bind="visible: isDead">
                    <div class="name" data-bind="text: fmTitleAndName, attr: {style: stName}"></div>
                    <div>
                        <table>
                            <tr>
                                <td data-bind="text: fmGender"></td>
                                <td data-bind="text: fmRole"></td>
                                <td><div data-bind="attr: {style: cpStyle}" class="icon"></div></td>
                            </tr>
                        </table>
                        <div class="user" data-bind="text: fmUser, attr: {style: stUser}"></div>
                    </div>
                </li>
            </ul>

            <div data-bind="visible: roomState() == RoomState.Matchmaking">
                <h4>Matchmaking</h4>

                <div data-bind="text: fmDuration"></div>
                <button type="button" data-bind="text: $root.Text('Start'), click: RoomStart">Start</button>
            </div>

            <div data-bind="visible: roomState() == RoomState.Playing">
                <h4>Playing</h4>

                <div data-bind="text: fmDuration"></div>
                
                <!-- Button trigger modal -->
                <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                    Vote
                </button>

                <!-- Modal -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">Vote</h4>
                            </div>
                            <div class="modal-body">
                                <p>Select a character to execute. Changes will be saved automatically.</p>
                                <select data-bind="options:cpActorsExceptMe, optionsText: 'fmTitleAndName', value: actorToExecute, optionsCaption: 'select me'"></select>
                                <select data-bind="options:cpActorsExceptMe, optionsText: 'fmTitleAndName', value: actorToAttack, optionsCaption: 'select me'"></select>
                                <select data-bind="options:cpActorsExceptMe, optionsText: 'fmTitleAndName', value: actorToFortuneTell, optionsCaption: 'select me'"></select>
                                <select data-bind="options:cpActorsExceptMe, optionsText: 'fmTitleAndName', value: actorToGuard, optionsCaption: 'select me'"></select>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div data-bind="visible: roomState() == RoomState.Ending">
                <h4>Ending</h4>

                <div data-bind="text: fmDuration"></div>
            </div>

            <div data-bind="visible: roomState() == RoomState.Ended">
                <h4>Ended</h4>
            </div>

            <select data-bind="options:roomSendModes, optionsText: 'name', value: roomSendMode"></select>
            <select data-bind="visible: roomSendMode().id == 3, options:actors, optionsText: 'fmTitleAndName', value: roomSendTo"></select>
            <div data-bind="text: roomSendMode().name"></div>
            <input type="text" id="RoomChat" />

            <!-- RoomMessages -->
            <ul data-bind="foreach: roomMessages" class="messages">
                <li data-bind="attr: { class: fmClass }">
                    <div class="from">
                        <span data-bind="text: cpFrom, attr:{style:stName}" class="name"></span>
                        <span data-bind="visible: canReport, click: report" class="glyphicon glyphicon-thumbs-down"></span>
                        <span data-bind="text: cpTo" class="to"></span>
                        <span data-bind="text: fmCreated" class="time"></span>
                    </div>
                    <div data-bind="foreach: bodyRows" class="body">
                        <div data-bind="text: $data"></div>
                    </div>
                </li>
            </ul>
        </div>
    </div>



    <!--<h4>Debug</h4>
    <input type="text" id="logs" />
    <ul data-bind="foreach: logs">
        <li>
            <strong data-bind="text: name"></strong>
            <span data-bind="text: body"></span>
        </li>
    </ul>-->
</div>



@section scripts{
    <script src="~/Scripts/linq.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/knockout/3.1.0/knockout-min.js"></script>
    @Scripts.Render("~/bundles/signalr")
    <script src="http://localhost:8080/signalr/hubs"></script>
    @Scripts.Render("~/bundles/game")
    <script type="text/javascript">
        $(function () {
            // Gets Pass from Server.
            var culture = '@Culture';
            var pass = '@ViewBag.ValidPassString';
            var topPageUrl = '@Url.Action("Index", "Home")';

            // Initializes Game
            if ($.connection.myHub === undefined) {
                // GameServer is gone. Redirects to Home.
                location.href = topPageUrl;
                return;
            }
            var model = new window.Apwei.Game.AppModel(culture, pass, $.connection.myHub);
            ko.applyBindings(model, document.getElementById('Game'));
            model.Connect();
        });
    </script>
}